@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model FaxVerification.Web.Pages.OCR.EditModalModel
@{
    Layout = null;
}
<style>

    .form-control {
        width: 100%;
    }
</style>

<abp-dynamic-form abp-model="Data" asp-page="/OCR/EditModal">
    <abp-modal size="Fullscreen">
        <abp-modal-header title="Update"></abp-modal-header>
        <abp-modal-body>
            <abp-row style="width:100%; height:800px">
                <abp-column >
                    <div style="margin:5px">
                        <abp-button id="prev" button-type="Primary" size=Small icon-type=FontAwesome icon="fa-regular fa-chevron-left" />
                        <abp-button id="next" button-type="Primary" size=Small icon-type=FontAwesome icon="fa-regular fa-chevron-right" />
                        <span>
                            Page:
                            <span id="page_num"></span> / <span id="page_count"></span>
                        </span>
                    </div>
                    <div style="overflow:auto;">
                        <canvas id="pdfViewer" width="600" height="750" style="position: absolute; border:solid 1px;  border-color:black; direction:ltr; z-index:0;"></canvas>
                        <canvas id="drawCanvas" width="600" height="750" style="position: absolute;  direction:ltr; z-index:1;cursor:crosshair;"></canvas>
                    </div>
                </abp-column>
                <abp-column >
                    <div id="form-content" style="height:750px; overflow:auto;">
                        <abp-form-content id="formID" style="align-content:flex-end" />
                    </div>
                </abp-column>
            </abp-row>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>