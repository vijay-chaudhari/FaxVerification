@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@model FaxVerification.Web.Pages.OCR.EditModalModel
@{
    Layout = null;
}
<style type="text/css">
    #content, html, body {
        left: 0;
        right: 0;
        height: 100%;
    }

    #left {
        position: absolute;
        width: 66%;
        height:99%;
    }

    #right {
        float: right;
        width: 30%;
        height: 99%;
        overflow-y: auto;
    }

    #pdfViewer {
        position: absolute;
        direction: ltr;
        border: solid 1px black;
        z-index: 0;
    }

    #drawCanvas {
        position: absolute;
        direction: ltr;
        z-index: 1;
        cursor: crosshair;
    }

    #selectionrect {
        border : 1px solid red;
    }
</style>

<abp-dynamic-form abp-model="Data" asp-page="/OCR/EditModal">
    <abp-modal size="Fullscreen">
        <abp-modal-body style="overflow:hidden">
            <div id="left">
                <div style="width:100%; height:100%; position:absolute" id="viewer"></div>
            </div>
            <div id="right">
                <div id="form-content">
                    <abp-form-content id="formID" />
                </div>
            </div>
        </abp-modal-body>
        <abp-modal-footer style="padding-bottom:1px; padding-top:5px" buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
