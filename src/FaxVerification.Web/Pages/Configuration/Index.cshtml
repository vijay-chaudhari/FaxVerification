            <input asp-for="Data.PersonDetails.AttributeCords_1" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_2" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_3" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_4" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_5" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_6" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_7" class="form-control" />
            <input asp-for="Data.PersonDetails.AttributeCords_8" class="form-control" />
            <input asp-for="Data.FormConfiguration" class="form-control" />*@
        </div>
        <div class="text-right">
            <button type="button" class="btn btn-primary pull-right" style="float:right" id="addconfig">Add Configuration</button>
        </div>
    </abp-card-body>
    <abp-card-footer>
        <abp-button button-type="Default" text="Cancel"></abp-button>
        <abp-button button-type="Primary" id="saveConfig" text="Save"></abp-button>
    </abp-card-footer>
</abp-card>

